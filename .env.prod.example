# ====== Django Settings ======
# Сгенерируйте новый: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=СГЕНЕРИРУЙТЕ_НОВЫЙ_КЛЮЧ_ЗДЕСЬ

DEBUG=False

# Добавьте ваши домены через запятую
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# CORS для фронтенда (https!)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====== Database Settings ======
POSTGRES_DB=autonews_prod
POSTGRES_USER=autonews_prod_user
POSTGRES_PASSWORD=СОЗДАЙТЕ_СЛОЖНЫЙ_ПАРОЛЬ_16+_СИМВОЛОВ

DB_HOST=postgres
DB_PORT=5432

# ====== Redis Settings ======
REDIS_URL=redis://redis:6379/1

# ====== AI Engine Settings ======
# Получите ключи на https://ai.google.dev/ или https://console.groq.com/
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Выберите провайдера: 'groq', 'gemini' или 'openai'
AI_PROVIDER=groq

# ====== Frontend URLs ======
# Замените на ваши реальные домены (https!)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
NEXT_PUBLIC_MEDIA_URL=https://api.yourdomain.com/media
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

