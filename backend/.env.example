# ===========================================
# Auto News - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git!

# ===========================================
# AI Configuration
# ===========================================

# Groq API Key (get from: https://console.groq.com/keys)
# FREE tier: 30 requests/minute, 14,400 requests/day
GROQ_API_KEY=your_groq_api_key_here

# AI Provider (currently only 'groq' is supported)
AI_PROVIDER=groq

# ===========================================
# Django Settings
# ===========================================

# Generate new SECRET_KEY with: 
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-immediately

# Debug mode (MUST be False in production!)
DEBUG=False

# Allowed hosts (comma-separated, add your domain in production)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ===========================================
# CORS Settings
# ===========================================

# Allowed origins for CORS (comma-separated)
# In production, list ONLY your domains!
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# Database (optional - uses SQLite by default)
# ===========================================

# For PostgreSQL in production:
# DB_NAME=autonews_db
# DB_USER=autonews_user
# DB_PASSWORD=your-secure-password-here
# DB_HOST=localhost
# DB_PORT=5432

# ===========================================
# Redis Cache (optional)
# ===========================================

# Redis URL for caching (optional, uses in-memory cache if not set)
REDIS_URL=redis://127.0.0.1:6379/1

# ===========================================
# Rate Limiting & Security
# ===========================================

# Maximum article generation requests per minute per IP
RATE_LIMIT_ARTICLE_GENERATION=5

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# ===========================================
# SendGrid Email Service
# ===========================================

# SendGrid API Key (get from: https://app.sendgrid.com/settings/api_keys)
# Used for sending newsletter welcome emails and notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here

# From email address (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=noreply@freshmotors.net

# From name shown in emails
SENDGRID_FROM_NAME=Fresh Motors
